#include<Arduino.h>
const int NUM_SENSORS = 11;
const int sensorPins[NUM_SENSORS] = {13, 14, 27, 26, 25, 32, 34, 39, 36, 15, 4};
int threshold = 1500;

void setup() {
  Serial.begin(115200);
  delay(2000);  
}

void loop() {
  for (int i = 0; i < NUM_SENSORS; i++) {
    int value = analogRead(sensorPins[i]);
    Serial.print("Sensor ");
    Serial.print(i);
    Serial.print(" (GPIO ");
    Serial.print(sensorPins[i]);
    Serial.print("): ");
    Serial.print(value);

    // Optional: print digital state too
    if (value > threshold) {
      Serial.println(" => LINE");
    } else {
      Serial.println(" => NO LINE");
    }
  }

  Serial.println("-----------------------------");
  delay(200);  // Adjust delay to match your desired update speed
}
